@{
    ViewData["Title"] = "Home Page";
}

<div class="homePage">

    <section class="showcase">
        <div class="showcase-img">
            <div class="showcase-grid">
                <div class="grid-item"></div>
                <div class="grid-item"></div>
                <div class="grid-item">
                    <p class="showcase-text">Welcome to Manero!</p>
                    <p class="showcase-text">50% OFF</p>
                </div>
                <div class="grid-item"></div>
            </div>
        </div>

    </section>

    <section class="bestseller-carousel">
        <div class="bestseller-carousel-title-container">
            <label class="bestseller-carousel-title">Best Sellers</label>
            <button class="bestseller-view-all-btn">View All</button>
        </div>
      
        <div class="carousel">
            <input type="radio" id="slide1" name="slides" checked>
            <input type="radio" id="slide2" name="slides">
            <input type="radio" id="slide3" name="slides">

            <div class="carousel-slides">
                <div class="carousel-slide">
                    <img src="path/to/image1.jpg" alt="Slide 1">
                </div>
                <div class="carousel-slide">
                    <img src="path/to/image2.jpg" alt="Slide 2">
                </div>
                <div class="carousel-slide">
                    <img src="path/to/image3.jpg" alt="Slide 3">
                </div>
            </div>

            <div class="carousel-controls">
                <label for="slide1"></label>
                <label for="slide2"></label>
                <label for="slide3"></label>
            </div>
        </div>

    </section>

    <section class="discount-offer">
        <div class="discount-offer-img">
            <div class="discount-offer-title">
                <p class="discount-offer-text">Take 50% off now!</p>
            </div>
            <button class="discount-offer-btn">shop now</button>
        </div>
    </section>

    <section class="featured-carousel">
        <section class="bestseller-carousel">
            <div class="bestseller-carousel-title-container">
                <label class="bestseller-carousel-title">Featured Products</label>
                <button class="bestseller-view-all-btn">View All</button>
            </div>

            <div class="carousel">
                <input type="radio" id="slide1" name="slides" checked>
                <input type="radio" id="slide2" name="slides">
                <input type="radio" id="slide3" name="slides">

                <div class="carousel-slides">
                    <div class="carousel-slide">
                        <img src="path/to/image1.jpg" alt="Slide 1">
                    </div>
                    <div class="carousel-slide">
                        <img src="path/to/image2.jpg" alt="Slide 2">
                    </div>
                    <div class="carousel-slide">
                        <img src="path/to/image3.jpg" alt="Slide 3">
                    </div>
                </div>

                <div class="carousel-controls">
                    <label for="slide1"></label>
                    <label for="slide2"></label>
                    <label for="slide3"></label>
                </div>
            </div>

        </section>
    </section>
</div>

