@model dynamic
@{
    var idSuffix = Model.idSuffix;
    var title = Model.title;

}
<div class="carousel-title-container">
    <label class="carousel-title">@title</label>
    <button class="view-all-btn">View All</button>
</div>

<div class="carousel">
    <input type="radio" id="@($"slide1{idSuffix}")" name="slides" checked>
    <input type="radio" id="@($"slide2{idSuffix}")" name="slides">
    <input type="radio" id="@($"slide3{idSuffix}")" name="slides">



    <div class="carousel-slides">
        <div class="carousel-slide">
            <img src="path/to/image1.jpg" alt="Slide 1">
        </div>
        <div class="carousel-slide">
            <img src="path/to/image2.jpg" alt="Slide 2">
        </div>
        <div class="carousel-slide">
            <img src="path/to/image3.jpg" alt="Slide 3">
        </div>
    </div>

    <div class="carousel-controls">
        <label for="@($"slide1{idSuffix}")"></label>
        <label for="@($"slide2{idSuffix}")"></label>
        <label for="@($"slide3{idSuffix}")"></label>
        
    </div>
</div>