@model List<ProductViewModel>

@{
}

@if (Model != null!)
{
    @foreach (var p in Model)
    {
        <div style="width: 300px; height: 400px; border: 1px solid black; padding: 15px; margin 5px; background: #f3f3f3; display: flex; flex-direction: column; justify-content: center">
            <div>@p.ProductId</div>
            <div>@p.ProductNumber</div>
            <div>@p.ProductName</div>
            <div>@p.Description</div>
            <div>@p.Category</div>
            <div>@p.Type</div>
            <div>@p.Size</div>
            <div>@p.QuantityInStock</div>
            <div>@p.Color</div>
            <div>@p.PriceExcTax</div>
            <div>@p.PriceIncTax</div>
            <div>@p.SalePrice</div>
            <div>@p.IsOnSale</div>
            <div>@p.IsFeatured</div>
            <div>@p.Rating</div>
            <div>@p.ImageUrl</div>
        </div>
    }
}