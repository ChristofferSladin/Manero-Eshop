@using Microsoft.AspNetCore.Identity
@using ServiceLibrary.Services
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject IUserService UserService
<div class="navbar-user">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="user-wrapper">
            @{
                var ser = await UserManager.FindByEmailAsync(User.Identity?.Name!);
                var user = await UserService.GetUserProfileAsync(ser?.Id!);
            }
            <a class="user-display-name" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@user.FirstName @user.LastName</a>
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="logout-btn">Logout</button>
            </form>
        </div>
    }
    else
    {
        <a class="user-login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    }
</div>
