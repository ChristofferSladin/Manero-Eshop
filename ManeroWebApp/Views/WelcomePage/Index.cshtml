@{
    ViewData["Title"] = "Welcome";
    ViewData["HideHeader"] = true;
    ViewData["HideFooter"] = true;
}

<div class="welcome-page">
    <div class="title-animation">
        <p>M</p>
        <p>A</p>
        <p>N</p>
        <p>E</p>
        <p>R</p>
        <p>O</p>
    </div>
    <div class="carousel-container">
        <div class="carousel">
            <input type="radio" id="slide1" name="carousel-radio" checked>
            <input type="radio" id="slide2" name="carousel-radio">
            <input type="radio" id="slide3" name="carousel-radio">

            <div class="slides">
                <div class="slide">
                    <h2>Welcome to Manero!</h2>
                    <p>Discover the latest in fashion and style.</p>
                    <a asp-controller="Account" asp-action="SignIn" class="get-started">Get Started</a>
                </div>
                <div class="slide">
                    <h2>Easy Track Order!</h2>
                    <p>Your shopping journey, simplified.</p>
                    <a asp-controller="Account" asp-action="SignIn" class="get-started">Get Started</a>
                </div>
                <div class="slide">
                    <h2>Door to Door Delivery!</h2>
                    <p>Bringing your clothes right to your doorstep.</p>
                    <a asp-controller="Account" asp-action="SignIn" class="get-started">Get Started</a>
                </div>
            </div>

            <div class="carousel-nav">
                <label for="slide1" class="nav-dot"></label>
                <label for="slide2" class="nav-dot"></label>
                <label for="slide3" class="nav-dot"></label>
            </div>
        </div>

    </div>
</div>


<script src="~/js/welcomePage.js"></script>
